/////////////
// GLOBALS //
/////////////
Texture2D shaderTexture;
SamplerState SampleType;

//////////////
// TYPEDEFS //
//////////////
struct PixelInputType
{
    float4 position : SV_POSITION;
    float2 tex : TEXCOORD0;
};

////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 SpecialPixelShader(PixelInputType input) : SV_TARGET
{
    float4 textureColor;
	float gray;

    // Sample the pixel color from the texture using the sampler at this texture coordinate location.
    textureColor = shaderTexture.Sample(SampleType, input.tex);

	// Desaturate the even lines and desaturate the double of odd lines
	gray = dot(textureColor.rgb, float3(0.299f, 0.587f, 0.114f));

    return float4(gray, gray, gray, textureColor.a);
}